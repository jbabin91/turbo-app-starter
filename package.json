{
  "name": "turbo-app-starter",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:backend": "turbo --filter backend build",
    "build:web": "turbo --filter web build",
    "clean": "turbo clean && rm -rf .turbo node_modules",
    "db:generate": "turbo db:generate",
    "db:migrate": "pnpm with-env turbo db:migrate",
    "db:reset": "pnpm with-env turbo db:reset",
    "db:seed": "pnpm with-env turbo db:seed",
    "db:studio": "pnpm with-env turbo db:studio",
    "dev": "turbo dev",
    "format": "prettier -uw --cache .",
    "format:check": "prettier -uc --cache .",
    "postinstall": "pnpm lint:ws",
    "lint": "turbo lint --continue -- --max-warnings 0 --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "sherif -r packages-without-package-json",
    "prepare": "husky",
    "preview": "turbo preview",
    "storybook": "turbo storybook",
    "typecheck": "turbo typecheck",
    "with-env": "dotenv -e .env --"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^22.2.0",
    "commitlint": "^19.4.0",
    "cz-git": "^1.9.4",
    "dotenv-cli": "^7.4.2",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.1",
    "sherif": "^0.11.0",
    "turbo": "^2.0.12",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">=20"
  }
}
