{
  "name": "turbo-app-starter",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm with-env turbo build",
    "build:backend": "pnpm with-env turbo --filter backend build",
    "build:web": "pnpm with-env turbo --filter web build",
    "clean": "turbo clean && rm -rf .turbo node_modules",
    "db:generate": "turbo db:generate",
    "db:migrate": "pnpm with-env turbo db:migrate",
    "db:reset": "pnpm with-env turbo db:reset",
    "db:seed": "pnpm with-env turbo db:seed",
    "db:studio": "pnpm with-env turbo db:studio",
    "dev": "pnpm with-env turbo dev",
    "format": "prettier -uw --cache .",
    "format:check": "prettier -uc --cache .",
    "postinstall": "pnpm lint:ws",
    "lint": "eslint . --max-warnings 0 && turbo lint --continue -- --max-warnings 0 --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:fix": "eslint . --fix && turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:ws": "sherif",
    "prepare": "husky",
    "preview": "NODE_ENV=production pnpm with-env turbo preview",
    "storybook": "turbo storybook",
    "typecheck": "turbo typecheck",
    "with-env": "dotenv -e .env --"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@commitlint/config-conventional": "^19.5.0",
    "@repo/eslint-config": "workspace:*",
    "@types/node": "^22.7.4",
    "commitlint": "^19.5.0",
    "cz-git": "^1.10.0",
    "dotenv-cli": "^7.4.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.2",
    "sherif": "^1.0.0",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2"
  },
  "packageManager": "pnpm@9.11.0",
  "engines": {
    "node": ">=20"
  }
}
